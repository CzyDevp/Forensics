<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:clickable="true"
        android:id="@+id/linearLayout2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="30"
            android:id="@+id/Etext"
            android:text="  Evidence"
            android:gravity="start"
            android:background="#ff3fb8e5"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:textAlignment="center"
            android:typeface="serif" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/linearLayout3">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/newev"
                android:textColor="#ffcbcbcb"
                android:enabled="true"
                android:clickable="true"
                android:typeface="serif"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/add"
                android:layout_weight="0.10" />

            <Button
                android:layout_width="69dp"
                android:layout_height="70dp"
                android:id="@+id/view_eve"
                android:textColor="#ffffffff"
                android:onClick="onClick"
                android:clickable="true"
                android:enabled="true"
                android:background="@drawable/srch"
                android:typeface="sans"
                android:layout_marginStart="90dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/linearLayout31">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv1"
                android:textColor="#ff0278cb"
                android:enabled="true"
                android:text="Add"
                android:typeface="serif"
                android:layout_marginLeft="95dp"
                android:layout_marginTop="05dp"
                android:layout_weight="0.10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/srch"
                android:textColor="#ff0278cb"
                android:enabled="true"
                android:typeface="sans"
                android:text="Search"
                android:layout_marginTop="05dp"
                android:layout_marginStart="120dp"
               />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout4">

            <Button
                android:layout_width="80dp"
                android:layout_height="73dp"
                android:id="@+id/update"
                android:textColor="#ffffffff"
                android:clickable="true"
                android:enabled="true"
                android:background="@drawable/up"
                android:layout_marginStart="160dp"
                android:layout_marginTop="20dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:id="@+id/linearLayout312">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/up"
                android:textColor="#ff0278cb"
                android:enabled="true"
                android:text="Update"
                android:typeface="serif"
                android:layout_marginLeft="175dp"
                android:layout_marginTop="05dp"
                android:layout_weight="0.10" />


        </LinearLayout>
             <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="text"
            android:ems="30"
            android:id="@+id/evidence"
            android:text="   Case"
            android:gravity="start"
            android:background="#ff3fb8e5"
            android:textColor="#ffffffff"
            android:textSize="25dp"
            android:textAlignment="center"
            android:typeface="serif"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_marginTop="25dp"
            android:weightSum="2" >

            <Button
                android:layout_width="68dp"
                android:layout_height="94dp"
                android:id="@+id/srchcase"
                android:textColor="#ff0c0c0d"
                android:enabled="true"
                android:clickable="true"
                android:background="@drawable/srch"
                android:gravity="bottom|center"
                android:layout_marginTop="02dp"
                android:layout_marginStart="160dp"
                />
            <TextView
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                 android:ems="30"
                android:id="@+id/vc"
                android:text="   View Case"
                android:gravity="center"
                android:background="#ff3fb8e5"
                android:textColor="#ffffffff"
                android:textSize="20dp"
                android:textAlignment="center"
                android:typeface="serif"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</ScrollView>