<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="30"
        android:id="@+id/textView"
        android:text="  New Investigator"
        android:gravity="start"
        android:background="#ff3fb8e5"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:textAlignment="center"
        android:typeface="serif" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ffffffff">
        <EditText
        android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="textAutoComplete|textPersonName"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="30dp"
        android:background="@android:drawable/editbox_background_normal"
        android:typeface="serif"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:enabled="true"
        android:editable="true"
        android:textColorHint="#ff4bbce7"
           />
    <EditText
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="15dp"
        android:background="@android:drawable/editbox_background_normal"
        android:typeface="serif"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:enabled="true"
        android:editable="true"
        android:textColorHint="#ff4bbce7"
        android:password="false" />

   <EditText
        android:id="@+id/tv3"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:hint="Mobile No"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@android:drawable/editbox_background_normal"
        android:typeface="serif"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="21dp"
        android:layout_gravity="center_horizontal"
        android:editable="true"
        android:enabled="true"
        android:inputType="phone"
        android:layout_marginTop="15dp"
        android:textColorHint="#ff4bbce7"
        android:maxLength="10" />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="+91"
        android:maxLines="1"
        android:singleLine="true"
        android:layout_marginTop="-36dp"
        android:background="@android:drawable/editbox_background_normal"
        android:typeface="serif"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_horizontal"
        android:editable="true"
        android:enabled="true"
        android:layout_marginLeft="-115dp"
        android:inputType="phone"
        android:textColor="#ff4bbce7"
        android:maxLength="10" />
    <Button
        android:layout_width="34dp"
        android:layout_height="32dp"
       android:layout_marginLeft="310dp"
        android:background="@drawable/cont"
        android:layout_marginTop="-35dp"
        android:id="@+id/con"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress|textAutoComplete"
        android:ems="10"
        android:id="@+id/tv4"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="E-mail"
        android:textColorHint="#ff4bbce7"
        android:background="@android:drawable/editbox_background_normal"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Photo "
            android:id="@+id/textView2"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            android:typeface="serif"
            android:textSize="18dp"
            android:textColor="#ff4bbce7" />
        <Button
            android:layout_width="44dp"
            android:layout_height="32dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/galry"
            android:id="@+id/gal"
            android:enabled="true" />
        <Button
            android:layout_width="44dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/cam"
            android:id="@+id/cam"/>


    </LinearLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:id="@+id/userimage"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/user1"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
      />

    <Button
        android:layout_width="258dp"
        android:layout_height="wrap_content"
        android:text=" Add"
        android:id="@+id/add"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="0dp"
        android:layout_weight="0.06"
        android:textColor="#ff4bbce7"
        android:background="@android:drawable/editbox_background_normal"

        android:onClick="addnew" />
    </LinearLayout>


</LinearLayout>
    </ScrollView>
