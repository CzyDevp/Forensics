<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:id="@+id/b">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="30"
        android:id="@+id/textView3"
        android:text="  Search User"
        android:gravity="start"
        android:background="#ff3fb8e5"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:textAlignment="center"
        android:typeface="serif"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.06" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="View All"
        android:id="@+id/viewall"
        android:textColor="#ff3fb8e5"
        android:layout_gravity="right"
        android:layout_marginTop="5sp"
        android:layout_marginRight="10sp"
        android:layout_weight="0.20" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Search"
            android:id="@+id/textView2"
            android:layout_marginTop="50dp"
            android:layout_marginStart="22dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:textColor="#ff3fb8e5" />
        <AutoCompleteTextView
            android:id="@+id/auto1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="-10dp"
            android:hint="Search by Name Or Id"
            android:textColorHint="#ff4bbce7"
            android:ems="10"
            android:completionThreshold="1"
            />
        <Button
            android:layout_width="30dp"
            android:layout_height="34dp"
            android:id="@+id/btn"
            android:background="@android:drawable/ic_menu_search"
            android:textColor="#ff3fb8e5"
            android:textSize="20dp"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="106dp"
        android:layout_height="116dp"
        android:id="@+id/imageView"
        android:layout_weight="0.06"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/user1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tid"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:hint="Id"
        android:enabled="true"
        android:textColorHint="#ff3fb8e5"
        android:textSize="18sp"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:hint="Name"
        android:enabled="true"
        android:textColorHint="#ff3fb8e5"
        android:textSize="18sp"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:hint="MobileNo"
        android:enabled="true"
        android:textColorHint="#ff3fb8e5"
        android:textSize="18sp"
         />
       <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:hint="Email"
        android:enabled="true"
        android:textColorHint="#ff3fb8e5"
           android:textSize="18sp"
            />
       <Button
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=""
        android:id="@+id/pdf"
        android:textColor="#ff3fb8e5"
        android:layout_gravity="right"
        android:layout_marginTop="48dp"
        android:layout_marginRight="170dp"
        android:background="@drawable/pdff" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get pdf"
        android:id="@+id/getpdf"
        android:layout_marginLeft="150dp"
        android:textColor="#ff3fb8e5"
        android:textSize="18sp"
        android:maxLines="300"
        android:minLines="1"
        android:layout_marginTop="02dp"
        android:background="@android:color/white" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/print"
        android:layout_gravity="center"
        android:text="Print-Doc"
        android:visibility="gone"/>

</LinearLayout>
</ScrollView>