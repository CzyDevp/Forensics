
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:clickable="true"

    android:gravity="center_horizontal"
    android:background="#ffffffff"
    >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:inputType="text"
        android:ems="30"
        android:id="@+id/Etext"
        android:text="   Case"
        android:gravity="center|center_vertical|start|center_horizontal"
        android:textSize="20dp"
        android:textAlignment="center"
        android:typeface="serif"
        android:focusableInTouchMode="false"
        android:textColor="#ffffffff"
        android:background="#ff49b6e0"
        android:layout_marginStart="0dp"
        android:layout_weight="0.56" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/new_case"
            android:textColor="#ffcbcbcb"
            android:enabled="true"
            android:clickable="true"
            android:typeface="serif"
             android:layout_marginLeft="70dp"

android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/add"
            android:layout_weight="0.10" />


        <Button
            android:layout_width="69dp"
            android:layout_height="70dp"
            android:id="@+id/view_case"
            android:textColor="#ffffffff"
            android:onClick="onClick"
            android:clickable="true"
            android:enabled="true"
            android:background="@drawable/srch"
            android:typeface="sans"
            android:layout_marginStart="90dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout31">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv1"
            android:textColor="#ff0278cb"
            android:enabled="true"
            android:text="Add"
            android:typeface="serif"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="05dp"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/srch"
            android:textColor="#ff0278cb"
            android:enabled="true"
            android:typeface="sans"
            android:text="Search"
            android:layout_marginTop="05dp"
            android:layout_marginStart="120dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="80dp"
            android:layout_height="73dp"
            android:id="@+id/update_case"
            android:textColor="#ffffffff"
            android:clickable="true"
            android:enabled="true"
            android:onClick="onClick"
            android:background="@drawable/up"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"/>



        <Button
            android:layout_width="60dp"
            android:layout_height="71dp"
            android:id="@+id/delete_case"
            android:textColor="#ffffffff"
            android:onClick="onClick"
            android:clickable="true"
            android:enabled="true"
            android:background="@drawable/delete"
            android:layout_marginStart="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout01">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/up"
            android:textColor="#ff0278cb"
            android:enabled="true"
            android:text="Update"
            android:typeface="serif"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="00dp"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/del"
            android:textColor="#ff0278cb"
            android:enabled="true"
            android:typeface="sans"
            android:text="Delete"
            android:layout_marginTop="00dp"
            android:layout_marginStart="100dp"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:inputType="text"
        android:ems="30"
        android:id="@+id/textView"
        android:text="  Investigators"
        android:gravity="center|center_vertical|start|center_horizontal"
        android:background="#ff43c0fb"
        android:textSize="20dp"
        android:textAlignment="center"
        android:typeface="serif"
        android:layout_marginTop="20dp"
        android:focusableInTouchMode="false"
        android:textColor="#ffffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        android:weightSum="2">
        <Button
            android:layout_width="75dp"
            android:layout_height="63dp"
            android:id="@+id/new_user"
            android:textColor="#ff232323"
            android:onClick="onClick"
            android:clickable="true"
            android:enabled="true"
            android:background="@drawable/addusr"
            android:textSize="17dp"
            android:layout_marginStart="50dp"
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="80dp"
            />
        <Button
            android:layout_width="70dp"
            android:layout_height="69dp"
            android:id="@+id/delete_user"
            android:textColor="#ff232323"
            android:enabled="true"
            android:clickable="true"
            android:onClick="onClick"
            android:layout_marginLeft="80dp"

            android:layout_marginStart="60dp"
            android:layout_marginEnd="10dp"
            android:typeface="serif"
            android:layout_marginTop="10dp"
            android:background="@drawable/remove_user" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/l02">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/add"
            android:textColor="#ff0278cb"
            android:enabled="true"
            android:text="Add"
            android:typeface="serif"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="05dp"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delu"
            android:textColor="#ff0278cb"
            android:enabled="true"
            android:typeface="sans"
            android:text="Delete"
            android:layout_marginTop="05dp"
            android:layout_marginStart="110dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="90dp"
            android:layout_height="82dp"
            android:id="@+id/update_user"
            android:textColor="#ff232323"
            android:clickable="true"
            android:enabled="true"
            android:onClick="onClick"
            android:background="@drawable/user"
            android:textSize="17dp"
            android:layout_marginLeft="70dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:typeface="serif" />

        <Button
            android:layout_width="69dp"
            android:layout_height="67dp"
            android:id="@+id/search_user"
            android:textColor="#ff232323"
            android:clickable="true"
            android:enabled="true"
            android:onClick="onClick"
            android:background="@drawable/searchpeople"
            android:textSize="17dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginEnd="10dp"
            android:typeface="serif" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:id="@+id/linearLayout02">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/up1"
            android:textColor="#ff0278cb"
            android:enabled="true"
            android:text="Update"
            android:typeface="serif"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="-5dp"
            android:layout_weight="0.10" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/srch1"
            android:textColor="#ff0278cb"
            android:enabled="true"
            android:typeface="sans"
            android:text="Search"
            android:layout_marginTop="-5dp"
            android:layout_marginStart="95dp"
            />
    </LinearLayout>

</LinearLayout>
</ScrollView>