<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#ffffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="30"
        android:id="@+id/textView2"
        android:text="  Update Case"
        android:gravity="start"
        android:background="#ff3fb8e5"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:textAlignment="center"
        android:typeface="serif"
        />
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:orientation="vertical"
android:weightSum="1"
    android:layout_weight="0.35">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Case"
        android:id="@+id/tv12"
        android:layout_marginTop="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="0dp"
        android:textColor="#ff3fb8e5" />
    <AutoCompleteTextView
        android:id="@+id/auto1"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-30dp"
        android:layout_marginLeft="75dp"
        android:hint="   Search by Name Or Id"
        android:textColorHint="#ff4bbce7"
        android:ems="10"
        android:completionThreshold="1"
        />
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:maxLines="1"
        android:textColorHint="#ff4bbce7"
        android:singleLine="true"
        android:layout_marginTop="-35dp"
        android:typeface="serif"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="110dp"
        android:autoText="false"
        android:background="@android:drawable/ic_menu_search" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/t2"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="-110dp"
        android:layout_marginRight="20dp"
        android:hint="Current Investi"
        android:enabled="false"
        android:textColorHint="#ff3fb8e5"
        android:textSize="15sp" />
    <MultiAutoCompleteTextView
        android:id="@+id/auto2"
        android:layout_width="250sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:layout_marginLeft="115dp"
        android:hint="Investigators"
        android:textColorHint="#ff4bbce7"
        android:ems="10"
        android:completionThreshold="1"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/e3"
        android:enabled="false"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:hint="Status"
        android:textColorHint="#ff3fb8e5"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/e4"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:hint="Description"
        android:enabled="false"
        android:textColorHint="#ff3fb8e5"/>
    <Button
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:id="@+id/modify"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:drawable/editbox_background_normal"
        android:textColor="#ff3fb8e5" />
</LinearLayout>


</LinearLayout>
    </ScrollView>